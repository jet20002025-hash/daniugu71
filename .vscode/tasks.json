{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "安装依赖",
      "type": "shell",
      "command": "python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "启动选股 Web 服务",
      "type": "shell",
      "command": "python app.py",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "always" }
    }
  ]
}
